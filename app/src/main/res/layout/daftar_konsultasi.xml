<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".DaftarKonsultasi">




    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Registrasi Konsultasi"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_gravity="left"
        android:textColor="@color/colorRed"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Nama"
        android:inputType="text"/>

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="left"
        android:layout_marginTop="-40dp"
        android:datePickerMode="calendar"
        android:colorAccent="@color/colorRed"
        android:calendarTextColor="@color/colorRed"
        android:headerBackground="@color/colorRed"
        android:scaleX=".8"
        android:scaleY=".8"/>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="left"
        android:layout_marginTop="-50dp"
        android:datePickerMode="calendar"
        android:colorAccent="@color/colorRed"
        android:calendarTextColor="@color/colorRed"
        android:headerBackground="@color/colorRed"
        android:scaleX=".6"
        android:scaleY=".6" />

    <EditText
        android:id="@+id/ketText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Keterangan"
        android:inputType="text"/>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/validateBtn2"
        android:layout_width="156dp"
        android:layout_height="55dp"
        android:background="@drawable/bottomsudah"
        android:layout_gravity="right"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:text="SAVE" />



</LinearLayout>